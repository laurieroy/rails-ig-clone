<% if current_user.followings.include?(user) %>
  <%= button_to "Unfollow", unfollow_path(user_id: user.id), method: :delete, data: { turbo: false }, class: "btn btn-danger" %>
<% elsif current_user.waiting_followings.include?(user) %>
  <%= button_to "Cancel", cancel_request_path(user_id: user.id), data: { turbo: false }, method: :delete, class: "btn btn-warning" %>
<% elsif current_user == user %>
<% else %>
  <%= button_to "Follow", follow_path(user_id: user.id), method: :post, data: { turbo: false }, class: "btn btn-primary" %>
<% end %>