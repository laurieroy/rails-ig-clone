<%= render "shared/flash_messages" %>
<div class="d-flex my-5 justify-content-center gap-5">
  <div class="d-flex flex-column gap-3">
    <%= render "stories/stories_list" %>
    <% if current_user.posts.nil? %>
      <p>Add a post!</p>
    <% else %>
      <div class="flex flex-column">
        <% current_user.posts.each do |p| %>
          <%= render "posts/post", post: p %>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= render "suggestions/suggestions_list" %>
</div>
