<div class="d-flex justify-content-between">
  <div class="d-flex">
    <%= image_tag liker.profile_picture.attached? ? liker.profile_picture : "profile.png", class: "img-thumbnail rounded-circle", style: "width: 2.5rem" %>
    <div class="d-flex flex-column mx-3 justify-content-center">
      <small class="fw-bold text-truncate" style="max-width: 10rem"><%= link_to liker, data: { turbo: false } do %><%= liker.username %><% end %></small>
 
    </div>
  </div>
  <%= render "shared/follow_state", user: liker %>
</div>