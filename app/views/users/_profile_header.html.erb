<div class="container d-flex justify-content-center align-items-center gap-5 border-bottom" style="min-height: 20rem;">
  <%= image_tag user.profile_picture.attached? ? user.profile_picture : "profile.png", class: "img-thumbnail rounded-circle w-25", style: "max-width: 8rem; max-height: 8rem;" %>

  <div class="w-50 d-flex flex-column gap-4">
    <div class="d-flex gap-3 align-items-center">
      <p class="m-0 fw-bold"><%= user.username %></p>
      <button class="btn border border-1">Message</button>

      <%= render "shared/follow_state", user: user %>

      <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-transparent border" if user == current_user %>
    </div>
    <div class="d-flex gap-5">
      <small class="fw-bold"><%= pluralize(user.posts.count, "Post") %></small>
      <small class="fw-bold"><%= pluralize(user.followers.count, "Followers") %></small>
      <small class="fw-bold"><%= pluralize(user.followings.count, "Following") %></small>
    </div>
    <div class="d-flex flex-column">
      <small class="fw-bold"><%= user.full_name.titlecase %></small>
      <small class=""><%= user.bio %></small>
    </div>
  </div>
</div>