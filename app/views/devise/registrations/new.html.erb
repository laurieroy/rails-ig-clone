              <%= f.email_field :email, class: "form-control", placeholder: "Mobile Number or Email" %>
            </div>
            <div class="mb-3">
              <%= f.label :fullname %><br />
              <%= f.email_field :fullname , class: "form-control", placeholder: "Full Name" %>
            </div>
            <div class="mb-3 mt-4">
              <%= f.label :username %><br />
              <%= f.email_field :username, class: "form-control", placeholder: "Username" %>
            </div>
            <div class="mb-3">
              <%= f.label :password %><br />
              <%= f.password_field :password, class: "form-control",autocomplete: "current-password", id:"password" placeholder:"Password" %>
            </div>
     
               <div class="mb-3">
              <%#= f.label :fullname %><br />
              <%= f.email_field :fullname , class: "form-control", placeholder: "Full Name" %>
            </div>
            <div class="mb-3 mt-4">
              <%= f.label :username %><br />
              <%= f.email_field :username, class: "form-control", placeholder: "Username" %>
            </div>
     
            <a href="#" class="btn btn-primary d-block">Log In</a>

            <div class="d-flex align-items-center mt-4">
